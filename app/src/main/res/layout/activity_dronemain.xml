<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginRight="70dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/mainTopic_1"
        android:text="DRMS"
        android:id="@+id/main_topic1"
        android:layout_marginEnd="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="70dp"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/mainTopic_2"
        android:text="Fly"
        android:id="@+id/main_topic2"
        android:layout_marginStart="70dp" />

    <LinearLayout
        android:layout_width="570dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_topic1"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:padding="3dp"
        android:id="@+id/topic_information"
        android:background="#efefef">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="3dp"
            android:background="@color/dronemain_Color">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="50dp"
                android:text="MY"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/mainTopic_1"/>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drone"
                android:minWidth="50dp"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/mainTopic_1"/>

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="3dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/dronemain_Color"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="140dp"
                android:textSize="20dp"
                android:textColor="#ff0000"
                android:gravity="center"
                android:id="@+id/device_name"
                android:text="Nothing" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="140dp"
                android:textSize="13dp"
                android:textColor="@color/splashText"
                android:gravity="center"
                android:id="@+id/device_address"
                android:text="00:00:00:00:00:00" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:gravity="center"
            android:background="@color/dronemain_Color">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"/>

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/dronemain_Color"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="@color/dronemain_Color"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:minWidth="40dp"
                android:src="@mipmap/ic_launcher"/>

            <android.support.v4.widget.Space
                android:layout_width="5dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="controller"
                    android:textSize="13dp"
                    android:textColor="@color/mainTopic_1"/>

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="570dp"
        android:layout_height="wrap_content"
        android:minHeight="180dp"
        android:background="#efefef"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintTop_toBottomOf="@+id/topic_information"
        android:padding="3dp">

        <LinearLayout
            android:layout_width="570dp"
            android:layout_height="wrap_content"
            android:minHeight="180dp"
            android:background="@color/dronemain_Color"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topic_information"
            android:padding="3dp">

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>

