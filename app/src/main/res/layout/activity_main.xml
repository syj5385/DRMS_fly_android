<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.drms.drms_drone.Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center|bottom">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:src="@mipmap/splash1"/>

        <android.support.v4.widget.Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:src="@mipmap/splash2"/>

        <android.support.v4.widget.Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:src="@mipmap/splash3"/>

        <android.support.v4.widget.Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:src="@mipmap/splash4"/>

        <android.support.v4.widget.Space
            android:layout_width="15dp"
            android:layout_height="wrap_content" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:minHeight="80dp"
            android:src="@mipmap/splash5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center|top">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DRMS FLY"
            android:id="@+id/logo"
            android:textColor="#efefef"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:alpha="255"
            android:textSize="20dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v0.0.0"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="7dp"
            android:textSize="15dp"
            android:layout_gravity="left|bottom"
            android:textColor="#efefef"
            android:textStyle="bold"
            android:id="@+id/version"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="made by Yeongjun"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="7dp"
            android:textSize="15dp"
            android:layout_gravity="right|bottom"
            android:textColor="#efefef"
            android:textStyle="bold"
            />

    </LinearLayout>
</LinearLayout>
